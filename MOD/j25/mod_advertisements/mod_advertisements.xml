<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>Advertisements</name>
	<author>步步街工作室</author>
	<creationDate>July 2012</creationDate>
	<copyright>Copyright (C) 步步街工作室 2008 - 2012. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bubujie@gmail.com</authorEmail>
	<authorUrl>www.bubujie.net</authorUrl>
	<version>2.5.0</version>
	<description>MOD_BANNERS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_advertisements">mod_advertisements.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_advertisements.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_advertisements.ini</language>
		<language tag="en-GB">en-GB.mod_advertisements.sys.ini</language>
		<language tag="zh-CN">zh-CN.mod_advertisements.ini</language>
		<language tag="zh-CN">zh-CN.mod_advertisements.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_BANNERS" />
	<config>
		<fields name="params">
			<fieldset name="basic"
				addfieldpath="/administrator/components/com_banners/models/fields">
				<field
					name="target"
					type="list"
					default="1"
					label="MOD_BANNERS_FIELD_TARGET_LABEL"
					description="MOD_BANNERS_FIELD_TARGET_DESC">
					<option
						value="0">JBROWSERTARGET_PARENT</option>
					<option
						value="1">JBROWSERTARGET_NEW</option>
					<option
						value="2">JBROWSERTARGET_POPUP</option>
				</field>

				<field
					name="count"
					type="integer"
					first="1"
					last="10"
					step="1"
					default="5"
					label="MOD_BANNERS_FIELD_COUNT_LABEL"
					description="MOD_BANNERS_FIELD_COUNT_DESC" />
				<field
					name="cid"
					type="bannerclient"
					label="MOD_BANNERS_FIELD_BANNERCLIENT_LABEL"
					description="MOD_BANNERS_FIELD_BANNERCLIENT_DESC" />

				<field
					name="catid"
					type="category"
					extension="com_banners"
					label="JCATEGORY"
					multiple="true" size="5"
					default=""
					description="MOD_BANNERS_FIELD_CATEGORY_DESC" >
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="tag_search"
					type="radio"
					default="0"
					label="MOD_BANNERS_FIELD_TAG_LABEL"
					description="MOD_BANNERS_FIELD_TAG_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="ordering"
					type="list"
					default="0"
					label="MOD_BANNERS_FIELD_RANDOMISE_LABEL"
					description="MOD_BANNERS_FIELD_RANDOMISE_DESC">
					<option
						value="0">MOD_BANNERS_VALUE_STICKYORDERING</option>
					<option
						value="random">MOD_BANNERS_VALUE_STICKYRANDOMISE</option>
				</field>

				<field
					name="header_text"
					type="textarea"
					filter="safehtml"
					rows="3"
					cols="40"
					label="MOD_BANNERS_FIELD_HEADER_LABEL"
					description="MOD_BANNERS_FIELD_HEADER_DESC" />

				<field
					name="footer_text"
					type="textarea"
					filter="safehtml"
					rows="3"
					cols="40"
					label="MOD_BANNERS_FIELD_FOOTER_LABEL"
					description="MOD_BANNERS_FIELD_FOOTER_DESC" />
			</fieldset>
<fieldset name="display" label="MOD_ADVERTISEMENTS_FIELD_GROUP_DISPLAY_LABEL">
	<field name="trigger" type="list" default="" label="触发器" description="">
		<option value="title">标题</option>
		<option value="round">圆点</option>
		<option value="number">数字</option>
	</field>
	<field name="direction" type="list" default="scrollx" label="轮播效果" description="">
		<option value="scrollx">左右</option>
		<option value="scrolly">上下</option>
		<option value="fade">透明</option>
	</field>
	<field name="around" type="radio" default="0" label="过渡效果" description="">
		<option value="0">向后</option>
		<option value="1">向前</option>
	</field>
	<field name="mousetype" type="radio" default="0" label="鼠标触发类型" description="">
		<option value="click">鼠标点击</option>
		<option value="mouse">鼠标移过</option>
	</field>
	<field name="stayTime" type="list" default="" label="轮播速度" description="">
		<option value="2000">快</option>
		<option value="3000">普通</option>
		<option value="5000">慢</option>
	</field>
	<field name="autoplay" type="radio" default="1"
		label="是否自动播放"
		description="MOD_ARTICLES_CATEGORY_FIELD_LINKTITLES_DESC"
		>
		<option value="1">JYES</option>
		<option value="0">JNO</option>
	</field>
	<field name="pauseonhover" type="radio" default="1"
		label="悬浮是否停止"
		description="MOD_ARTICLES_CATEGORY_FIELD_LINKTITLES_DESC"
		>
		<option value="1">JYES</option>
		<option value="0">JNO</option>
	</field>
	<field name="hastriggers" type="radio" default="1"
		label="是否有触点"
		description="MOD_ARTICLES_CATEGORY_FIELD_LINKTITLES_DESC"
		>
		<option value="1">JYES</option>
		<option value="0">JNO</option>
	</field>
	<field name="lazyload" type="radio" default="1"
		label="是否延迟加载图片"
		description="MOD_ARTICLES_CATEGORY_FIELD_LINKTITLES_DESC"
		>
		<option value="1">JYES</option>
		<option value="0">JNO</option>
	</field>
	<field name="triggerspos" type="list" default="" label="触发位置" description="">
		<option value="top">外面上部</option>
		<option value="right">外面右部</option>
		<option value="bottom">外面下部</option>
		<option value="left">外面左部</option>
		<option value="insidetop">内部顶端</option>
		<option value="insidebottom">内部底端</option>
	</field>
</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
