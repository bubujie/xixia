<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>mod_products</name>
	<author>BuBuJie.Studio</author>
	<creationDate>July 2009</creationDate>
	<copyright>Copyright (C) 2008 - 2014 BuBuJie Studio. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bubujie@gmail.com</authorEmail>
	<authorUrl>www.bubujie.net</authorUrl>
	<version>2.5.0</version>
	<description>MOD_PRODUCTS_XML_DESCRIPTION</description>
	<files>
	<filename module="mod_products">mod_products.php</filename>
	<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_products.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_products.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_products.sys.ini</language>
		<language tag="zh-CN">language/zh-CN/zh-CN.mod_products.ini</language>
		<language tag="zh-CN">language/zh-CN/zh-CN.mod_products.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_PRODUCTS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="catid"
					type="category"
					extension="com_products"
					required="true"
					label="JCATEGORY"
					description="MOD_PRODUCTS_FIELD_CATEGORY_DESC" />
				<field
					name="count"
					type="text"
					default="5"
					label="MOD_PRODUCTS_FIELD_COUNT_LABEL"
					description="MOD_PRODUCTS_FIELD_COUNT_DESC" />
				<field
					name="ordering"
					type="list"
					default="title"
					label="MOD_PRODUCTS_FIELD_ORDERING_LABEL"
					description="MOD_PRODUCTS_FIELD_ORDERING_DESC">
					<option
						value="title">JGLOBAL_TITLE</option>
					<option
						value="order">MOD_PRODUCTS_FIELD_VALUE_ORDER</option>
					<option
						value="hits">MOD_PRODUCTS_FIELD_VALUE_HITS</option>
				</field>
				<field
					name="direction"
					type="list"
					default="asc"
					label="MOD_PRODUCTS_FIELD_ORDERDIRECTION_LABEL"
					description="MOD_PRODUCTS_FIELD_ORDERDIRECTION_DESC">
					<option
						value="asc">MOD_PRODUCTS_FIELD_VALUE_ASCENDING</option>
					<option
						value="desc">MOD_PRODUCTS_FIELD_VALUE_DESCENDING</option>
				</field>
				<field
					name="target"
					type="list"
					default="3"
					label="MOD_PRODUCTS_FIELD_TARGET_LABEL"
					description="MOD_PRODUCTS_FIELD_TARGET_DESC">
					<option
						value="1">JBROWSERTARGET_NEW</option>
					<option
						value="2">JBROWSERTARGET_POPUP</option>
					<option
						value="3">JBROWSERTARGET_PARENT</option>
				</field>
				<field
					name="follow"
					type="radio"
					default="0"
					label="MOD_PRODUCTS_FIELD_FOLLOW_LABEL"
					description="MOD_PRODUCTS_FIELD_FOLLOW_DESC">
					<option
						value="follow">MOD_PRODUCTS_FIELD_VALUE_FOLLOW</option>
					<option
						value="nofollow">MOD_PRODUCTS_FIELD_VALUE_NOFOLLOW</option>
				</field>
				<field
					name="description"
					type="radio"
					default="0"
					label="MOD_PRODUCTS_FIELD_DESCRIPTION_LABEL"
					description="MOD_PRODUCTS_FIELD_DESCRIPTION_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				<field
					name="hits"
					type="radio"
					default="0"
					label="MOD_PRODUCTS_FIELD_HITS_LABEL"
					description="MOD_PRODUCTS_FIELD_HITS_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>

				<field
					name="count_clicks"
					type="List"
					default="0"
					label="MOD_PRODUCTS_FIELD_COUNTCLICKS_LABEL"
					description="MOD_PRODUCTS_FIELD_COUNTCLICKS_DESC">
						<option
						value="">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
