<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
  <name>##Template##</name>
  <creationDate>##date##</creationDate>
  <author>##author##</author>
  <authorEmail>##email##</authorEmail>
  <authorUrl>##website##</authorUrl>
  <copyright>Copyright (C) ##year## ##author## All rights reserved.</copyright>
  <license>##license##</license>
  <version>##version##</version>
  <description>TPL_##TEMPLATE##_XML_DESCRIPTION</description>
  <files>
    <folder>images</folder>
    <folder>html</folder>
    <folder>lang</folder>
    <folder>css</folder>
    <folder>img</folder>
    <folder>js</folder>
    <filename>template_thumbnail.png</filename>
    <filename>templateDetails.xml</filename>
    <filename>component.php</filename>
    <filename>favicon.ico</filename>
    <filename>index.html</filename>
    <filename>index.php</filename>
    <filename>error.php</filename>
  </files>
  <media folder="media" destination="system">
    <folder>js</folder>
  </media>
  <positions>
    <position>debug</position>
    <position>crumbs</position>
    <position>search</position>
    <position>bhead-top</position>
    <position>bhead-mid</position>
    <position>bhead-btm</position>
    <position>bbody-top</position>
    <position>main-side</position>
    <position>main-top</position>
    <!--position>com-side</position>
    <position>com-top</position>
    <position>com-btm</position>
    <position>com-aside</position-->
    <position>main-btm</position>
    <position>main-aside</position>
    <position>bbody-btm</position>
    <position>bfoot-top</position>
    <position>bfoot-mid</position>
    <position>bfoot-btm</position>
  </positions>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_##template##.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_##template##.sys.ini</language>
    <language tag="zh-CN">zh-CN/zh-CN.tpl_##template##.ini</language>
    <language tag="zh-CN">zh-CN/zh-CN.tpl_##template##.sys.ini</language>
  </languages>       
  <config>
    <fields name="params">
      <fieldset name="advanced">
        <field name="bheadLogo" type="text" default="logo_header.png"    label="TPL_##TEMPLATE##_FIELD_BHEADLOGO_LABEL" description="TPL_##TEMPLATE##_FIELD_BHEADLOGO_DESC" filter="string" />
        <field name="bfootLogo" type="text" default=""                   label="TPL_##TEMPLATE##_FIELD_BFOOTLOGO_LABEL" description="TPL_##TEMPLATE##_FIELD_BFOOTLOGO_DESC" filter="string" />
        <field name="siteTitle" type="text" default="步步街工作室" label="TPL_##TEMPLATE##_FIELD_SITETITLE_LABEL" description="TPL_##TEMPLATE##_FIELD_SITETITLE_DESC" filter="string" />
        <field name="siteDesc"  type="text" default=""                   label="TPL_##TEMPLATE##_FIELD_SITEDESC_LABEL"  description="TPL_##TEMPLATE##_FIELD_SITEDESC_DESC"  filter="string" />
      </fieldset>
    </fields>
  </config>
</extension>
